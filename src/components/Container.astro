---
import type { HTMLTag, Polymorphic } from "astro/types";

import { cn } from "~/lib/utils";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag; innerPage?: boolean }>;

const { as: Tag = "div", innerPage, ...props } = Astro.props;
---

<Tag
  {...props}
  class={cn(
    "container mx-auto",
    innerPage ? "px-4 md:px-0" : null,
    props?.class,
  )}
>
  <slot />
</Tag>
