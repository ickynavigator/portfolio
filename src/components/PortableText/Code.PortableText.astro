---
import CodeBlock from "../CodeBlock.astro";

interface CodeType {
  code: string;
  language: string;
  filename?: string | undefined;
  _type: "code";
  _key: string;
}

interface Props {
  node: CodeType;
  index: number;
  isInline: boolean;
}

const { node } = Astro.props;

const useNewCode = false;
---

{
  useNewCode ? (
    <CodeBlock
      code={node.code}
      language={node.language}
      inline={false}
      title={node.filename}
      showLineNumbers={true}
    />
  ) : (
    <pre class="border shadow">
      <code>{node.code}</code>
    </pre>
  )
}
