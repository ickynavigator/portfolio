---
import type { HTMLAttributes } from "astro/types";

import { cn } from "~/lib/utils";

type Props = HTMLAttributes<"select">;

const { class: _class, ...props } = Astro.props;
---

<select
  class={cn(
    "form-select border-input bg-background placeholder:text-muted-foreground ring-offset-background! focus:ring-ring focus-visible:ring-ring rounded-md focus:border-transparent focus:ring-2 focus:outline-hidden focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:outline-hidden disabled:cursor-not-allowed disabled:opacity-50 md:text-sm",
    _class,
  )}
  {...props}><slot /></select
>
