---
import MainLayout from "~/layouts/MainLayout.astro";
import NavLayout from "~/layouts/NavLayout.astro";
---

<MainLayout title="500" description="An Error Occured">
  <NavLayout>
    <div
      class="flex justify-center flex-col items-center gap-7 h-[50vh] px-20 text-center"
    >
      <p class="font-black text-9xl">500</p>
      <h1 class="font-black text-4xl">Something bad just happened...</h1>
      <p class="text-muted-foreground">
        Our servers could not handle your request. Don't worry, our development
        team was already notified. Try refreshing the page.
      </p>
      <a href="/" class="hover-link">Or take me back to home page</a>
    </div>
  </NavLayout>
</MainLayout>
